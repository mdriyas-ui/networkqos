<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

  <Button
      android:id="@+id/bt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:text="@string/hello_world" />

  <TextView
      android:id="@+id/phone_type"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/network_name"
      android:layout_alignLeft="@+id/network_name"
      android:layout_marginBottom="23dp"
      android:text="phone type" />

  <TextView
      android:id="@+id/sim_state"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/bandwidth"
      android:layout_below="@+id/bandwidth"
      android:layout_marginTop="93dp"
      android:text="sim state" />

  <TextView
      android:id="@+id/network_type"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/sim_state"
      android:layout_below="@+id/network_name"
      android:layout_marginTop="20dp"
      android:text="network type" />

  <TextView
      android:id="@+id/network_name"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/sim_state"
      android:layout_alignLeft="@+id/sim_state"
      android:layout_marginBottom="36dp"
      android:text="network name" />

  <TextView
      android:id="@+id/bandwidth"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/bt"
      android:layout_alignParentTop="true"
      android:layout_marginTop="35dp"
      android:text="bandwidth" />

  <ProgressBar
      android:id="@+id/progressBar2"
      style="?android:attr/progressBarStyleLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/sim_state"
      android:layout_centerHorizontal="true"
      android:visibility="invisible" />

  <TextView
      android:id="@+id/uname"
      android:layout_width="120dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true" />

</RelativeLayout>
